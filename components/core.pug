mixin head(page_title)
    head
        title #{page_title}
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        block

mixin scripts
    script(type="module" src="scripts/index.ts" defer async)
    block
mixin navbar
    style
        include /css/navbar.css
    script(src="/scripts/navbar.ts")
    div(class='topnav')
        a(href="javascript:void(0)" class="icon" onclick="toggleNavbar()")
            img(src="/media/flogo.svg" style='width:100px;height:100px;')
        div(id='navLinks')
            -let links = ['index.pug'];
            each link in links
                a(href='/' + link)= link

