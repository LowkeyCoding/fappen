mixin head(page_title)
    head
        title #{page_title}
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        block

mixin scripts
    script(type="module" src="scripts/index.ts" defer async)
    block
mixin navbar
    script(type="stylesheet" src="css/navbar.css")
    div(class='topnav')
        div(id='navLinks')
            -let links = ['index.pug'];
                each link in links
                    a(href='/' + link)= link
        a(href="javascript:void(0)" class="borger" onclick="")